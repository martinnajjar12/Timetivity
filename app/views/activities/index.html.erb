<div class='w-100'>
  <div class='bg-white rounded text-dark d-flex justify-content-between fw-bold time-div shadow'>
    <div class='text-muted'>Total Time:</div>
    <div><%= total_time %> hours</div>
  </div>
</div>

<div class='container grey-bg pt-3 text-dark'>
  <%= link_to 'Add Activity', new_user_activity_path(current_user.id), class: 'btn btn-success' %>
  <div class='mt-4'>
    <% @activities.each do |activity| %>
      <% present activity do |activity_presenter| %>
        <div class='d-flex bg-white activity-div align-items-center rounded mb-3'>
          <%= activity_presenter.activity_icon %>
          <div class='d-flex justify-content-between w-100'>
            <div class='ml-3'>
              <div><%= activity.name %></div>
              <div class='text-muted'><%= time_ago_in_words(activity.created_at) %></div>
            </div>
            <div class='mr-3'><%= activity.time %> hours</div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>