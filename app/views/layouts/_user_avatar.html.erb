<div class="text-center mt-4 container">
  <%= link_to user_path(current_user.id), class: 'link' do %>
    <% if current_user.avatar.attached? %>
      <div class="picture-div mx-auto rounded-circle" style="background-image: url('<%= url_for(current_user.avatar) %>');"></div>
    <% else %>
      <%= gravatar_image_tag(current_user.email, class: 'rounded-circle') %>
    <% end %>
    <h2 class='text-white'><%= current_user.name %></h2>
  <% end %>
</div>